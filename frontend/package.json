{
    "name": "react-fast-template",
    "version": "0.0.1",
    "type": "module",
    "description": "Starter kit for modern web applications",
    "repository": {
        "type": "git",
        "url": "https://github.com/teebarg/react-fast-template.git"
    },
    "bugs": {
        "url": "https://github.com/teebarg/react-fast-template/issues",
        "email": "teebarg01@gmail.com"
    },
    "license": "MIT",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "https-preview": "serve dist",
        "prepare": "if [ \"$NODE_ENV\" = \"local\" ]; then npm run prepare-local; fi",
        "prepare-local": "cd .. && husky install frontend/.husky && cp -n frontend/env/.shared frontend/.env &",
        "prettier:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
        "lint:check": "eslint --max-warnings=0 \"src/**/*.{js,jsx,ts,tsx,json}\" --fix",
        "ts:check": "tsc --noEmit",
        "test": "vitest &",
        "test:unit": "vitest &",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui"
    },
    "dependencies": {
        "@emotion/react": "^11.11.4",
        "@nextui-org/react": "2.4.1",
        "@nextui-org/theme": "^2.2.4",
        "@react-aria/visually-hidden": "^3.8.11",
        "@react-oauth/google": "^0.12.1",
        "@tanstack/react-query": "^5.40.0",
        "classnames": "^2.3.2",
        "framer-motion": "^11.2.10",
        "is-mobile": "^4.0.0",
        "nextui-hook-form": "^0.0.2",
        "notistack": "^3.0.1",
        "nui-react-icons": "^0.0.1",
        "react": "^18.2.0",
        "react-awesome-reveal": "^4.2.11",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^4.0.11",
        "react-helmet-async": "^2.0.3",
        "react-hook-form": "^7.51.5",
        "react-hotkeys-hook": "^4.4.1",
        "react-pro-sidebar": "^1.1.0",
        "react-router-dom": "^6.21.0",
        "recoil": "^0.7.7",
        "tailwind-variants": "^0.1.20",
        "tailwindcss": "3.4.3"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.10.4",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.19",
        "concurrently": "^8.2.2",
        "eslint": "^8.55.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "https-localhost": "^4.7.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "3.1.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.9",
        "vite-plugin-pwa": "^0.17.4",
        "vitest": "^1.1.3"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ],
        "src/**/*.{js,jsx,ts,tsx,json}": [
            "eslint --max-warnings=0 --fix"
        ]
    },
    "author": {
        "name": "Adeniyi Aderounmu",
        "email": "teebarg01@gmail.com",
        "url": "http://niyi.com.ng/"
    },
    "keywords": [
        "react",
        "pwa",
        "starter-kit",
        "vite"
    ]
}